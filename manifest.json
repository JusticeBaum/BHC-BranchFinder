{
  "manifest_version": 3,
  "name": "Branch Zip Code Mapper",
  "version": "1.0",
  "description": "Maps zip codes to nearest business branches",
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["data/mapping.csv"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "Command+Shift+Z"
      },
      "description": "Open popup"
    }
  }
}